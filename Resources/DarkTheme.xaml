<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Notion Dark Theme Colors -->
    <SolidColorBrush x:Key="WindowBackground" Color="#191919"/>
    <SolidColorBrush x:Key="ContentBackground" Color="#191919"/>
    <SolidColorBrush x:Key="PrimaryText" Color="#D3D3D3"/> 
    <SolidColorBrush x:Key="SecondaryText" Color="#9B9B9B"/>
    <SolidColorBrush x:Key="AccentColor" Color="#2EAADC"/> 
    <SolidColorBrush x:Key="BorderColor" Color="#2F2F2F"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#2F2F2F"/>
    <SolidColorBrush x:Key="SelectionColor" Color="#223C50"/>
    
    <FontFamily x:Key="MainFont">Segoe UI Variable Display, Segoe UI, sans-serif</FontFamily>
</ResourceDictionary>
