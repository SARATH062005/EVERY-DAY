<Window x:Class="EveryDay.Views.WidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EveryDay.ViewModels"
        xmlns:models="clr-namespace:EveryDay.Models"
        xmlns:selectors="clr-namespace:EveryDay.Selectors"
        xmlns:converters="clr-namespace:EveryDay.Converters"
        mc:Ignorable="d"
        Title="Every Day" Height="700" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="True"
        Left="100" Top="100">
    
    <Window.DataContext>
        <vm:WidgetViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:StrikeConverter x:Key="StrikeConverter"/>
        
        <!-- Button Style -->
        <Style TargetType="Button" x:Key="NavButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
            <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- TextBox Style with visible cursor -->
        <Style TargetType="TextBox" x:Key="BlockTextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource AccentColor}"/>
            <Setter Property="SelectionBrush" Value="{DynamicResource SelectionColor}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4,6"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <!-- Templates -->
        <DataTemplate x:Key="TextTemplate" DataType="{x:Type models:TextBlock}">
            <Border Margin="0,4" Padding="8,4" Background="Transparent" CornerRadius="4" x:Name="BlockBorder">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ðŸ“„" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Top" Opacity="0.6"/>
                    <TextBox Grid.Column="1" 
                             Text="{Binding Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource BlockTextBox}" 
                             FontSize="15"
                             MinHeight="30"/>
                    <Button Grid.Column="2" 
                            Command="{Binding DataContext.DeleteBlockCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Content="ðŸ—‘ï¸"
                            FontSize="16"
                            Padding="8,4"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#E74C3C"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Setter Property="Foreground" Value="#C0392B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="CheckboxTemplate" DataType="{x:Type models:CheckboxBlock}">
            <Border Margin="0,4" Padding="8,4" Background="Transparent" CornerRadius="4" x:Name="CheckBorder">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" 
                              VerticalAlignment="Top" 
                              Margin="0,6,8,0"
                              Cursor="Hand"/>
                    <TextBox Grid.Column="1" 
                             Text="{Binding Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource BlockTextBox}" 
                             FontSize="15"
                             MinHeight="30"
                             TextDecorations="{Binding IsChecked, Converter={StaticResource StrikeConverter}}"/>
                    <Button Grid.Column="2" 
                            Command="{Binding DataContext.DeleteBlockCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Content="ðŸ—‘ï¸"
                            FontSize="16"
                            Padding="8,4"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#E74C3C"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Setter Property="Foreground" Value="#C0392B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="HeaderTemplate" DataType="{x:Type models:HeaderBlock}">
            <Border Margin="0,12,0,8" Padding="8,4" Background="Transparent" CornerRadius="4" x:Name="HeaderBorder">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                              VerticalAlignment="Top"
                              Margin="0,4,8,0"
                              Cursor="Hand">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid Background="Transparent">
                                    <TextBlock x:Name="PinIcon" Text="ðŸ“Œ" FontSize="20" Opacity="0.4"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="PinIcon" Property="Opacity" Value="1.0"/>
                                        <Setter TargetName="PinIcon" Property="Text" Value="ðŸ“"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="PinIcon" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                    <TextBox Grid.Column="1" 
                             Text="{Binding Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource BlockTextBox}" 
                             FontSize="22" 
                             FontWeight="Bold"
                             MinHeight="35"
                             TextDecorations="{Binding IsChecked, Converter={StaticResource StrikeConverter}}"/>
                    <Button Grid.Column="2" 
                            Command="{Binding DataContext.DeleteBlockCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Content="ðŸ—‘ï¸"
                            FontSize="16"
                            Padding="8,4"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#E74C3C"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Setter Property="Foreground" Value="#C0392B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>

        <selectors:BlockTemplateSelector x:Key="BlockSelector"
            TextTemplate="{StaticResource TextTemplate}"
            CheckboxTemplate="{StaticResource CheckboxTemplate}"
            HeaderTemplate="{StaticResource HeaderTemplate}"/>
    </Window.Resources>

    <Border Background="{DynamicResource WindowBackground}" 
            CornerRadius="12" 
            Padding="0" 
            Opacity="0.98" 
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="1">
        
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/> <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Grid.ColumnSpan="2" 
                    Background="{DynamicResource ContentBackground}"
                    CornerRadius="12,12,0,0"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="EVERY DAY" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryText}"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>
                    
                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,10,0">
                        <Button Content="â€”" 
                                Click="MinimizeButton_Click"
                                Width="30" Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource SecondaryText}"
                                FontSize="16"
                                Cursor="Hand"
                                ToolTip="Minimize">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button Content="â–¡" 
                                Click="MaximizeButton_Click"
                                Width="30" Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource SecondaryText}"
                                FontSize="16"
                                Cursor="Hand"
                                ToolTip="Maximize">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button Content="âœ•" 
                                Click="CloseButton_Click"
                                Width="30" Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource SecondaryText}"
                                FontSize="16"
                                Cursor="Hand"
                                ToolTip="Close">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E74C3C"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Sidebar Navigation -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Background="{DynamicResource ContentBackground}" 
                    BorderBrush="{DynamicResource BorderColor}" 
                    BorderThickness="0,0,1,0"
                    CornerRadius="12,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- App Title -->
                    <StackPanel Grid.Row="0" Margin="20,15">
                        <TextBlock Text="EVERY DAY" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryText}"/>
                        <TextBlock Text="Your daily workspace" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource SecondaryText}" 
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <!-- Navigation Sections -->
                    <StackPanel Grid.Row="1" Margin="10,10">
                        <TextBlock Text="SECTIONS" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource SecondaryText}" 
                                   Margin="12,0,0,8"/>
                        
                        <Button Command="{Binding ChangeSectionCommand}" 
                                CommandParameter="Notes" 
                                Style="{StaticResource NavButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Notes" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding ChangeSectionCommand}" 
                                CommandParameter="ToDo" 
                                Style="{StaticResource NavButton}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœ“" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="To Do" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding ChangeSectionCommand}" 
                                CommandParameter="Tasks" 
                                Style="{StaticResource NavButton}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Tasks" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding ChangeSectionCommand}" 
                                CommandParameter="Journal" 
                                Style="{StaticResource NavButton}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“–" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Journal" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- Theme Toggle -->
                    <Button Grid.Row="2" 
                            Command="{Binding ToggleThemeCommand}" 
                            Style="{StaticResource NavButton}"
                            Margin="10,10,10,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŒ“" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Toggle Theme" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Main Content Area -->
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/> <!-- Header -->
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Section Header -->
                <Border Grid.Row="0" 
                        BorderBrush="{DynamicResource BorderColor}" 
                        BorderThickness="0,0,0,1"
                        Padding="25,15">
                    <Grid>
                        <TextBlock Text="{Binding CurrentSection}" 
                                   FontSize="24" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource PrimaryText}"
                                   VerticalAlignment="Center"/>
                        
                        <TextBlock Text="{Binding StreakDisplay}" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryText}"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                    </Grid>
                </Border>

                <!-- Content List -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto" 
                              Padding="20,10"
                              Focusable="False">
                    <ItemsControl ItemsSource="{Binding Blocks}" 
                                  ItemTemplateSelector="{StaticResource BlockSelector}"
                                  Focusable="False"
                                  AllowDrop="True"
                                  PreviewMouseLeftButtonDown="ItemsControl_PreviewMouseLeftButtonDown"
                                  PreviewMouseMove="ItemsControl_PreviewMouseMove"
                                  Drop="ItemsControl_Drop"
                                  DragOver="ItemsControl_DragOver">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Quick Add Bar -->
                <Border Grid.Row="2" 
                        Padding="20,15" 
                        BorderBrush="{DynamicResource BorderColor}" 
                        BorderThickness="0,1,0,0"
                        Background="{DynamicResource ContentBackground}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding AddBlockCommand}" 
                                CommandParameter="Text" 
                                Style="{StaticResource NavButton}"
                                Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,4,0"/>
                                <TextBlock Text="Text"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding AddBlockCommand}" 
                                CommandParameter="Check" 
                                Style="{StaticResource NavButton}"
                                Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,4,0"/>
                                <TextBlock Text="Todo"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding AddBlockCommand}" 
                                CommandParameter="Header" 
                                Style="{StaticResource NavButton}"
                                Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,4,0"/>
                                <TextBlock Text="Header"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
